{
  "entryFile": "./src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "version": "0.0.1"
  },
  "routes": {
    "routesDir": "public"
  },
  "compilerOptions": {
    "paths": {
      "tslib": [
        "./node_modules/tslib/tslib.es6.js"
      ],
      "#~/*": [
        "./*"
      ],
      "#src/*": [
        "./src/*"
      ],
      "#test/*": [
        "./test/*"
      ]
    }
  }
}
