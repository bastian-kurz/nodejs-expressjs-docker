{
  "name": "nodejs-expressjs-docker",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsx watch src/index.ts",
    "dp-check": "yarn npm-check-updates",
    "db-admin": "dynamodb-admin",
    "eslint": "npx eslint src/**.ts",
    "start": "yarn build && node build/src/index.js",
    "test": "jest"
  },
  "packageManager": "yarn@4.0.2",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.476.0",
    "axios": "^1.6.2",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "dynamodb-onetable": "^2.7.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/axios": "^0.14.0",
    "@types/compression": "^1",
    "@types/eslint": "^8",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4",
    "@types/lodash-es": "^4",
    "@types/morgan": "^1.9.9",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "dynamodb-admin": "^4.6.1",
    "eslint": "^8.56.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-floating-promise": "^1.0.2",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.12",
    "pactum": "^3.5.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "moduleNameMapper": {
      "^#~/(.*)$": "<rootDir>/$1",
      "^#src/(.*)$": "<rootDir>/src/$1",
      "^#test/(.*)$": "<rootDir>/test/$1"
    },
    "testPathIgnorePatterns": ["<rootDir>/build/", "<rootDir>/node_modules/"],
    "transform": {}
  }
}
